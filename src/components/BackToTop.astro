---
import IconChevronLeft from "@assets/icons/IconChevronLeft.astro";
---

<button
  id="back-to-top"
  data-visible="false"
  class="group fixed bottom-12 left-1/2 z-40 inline-flex -translate-x-1/2 transform items-center gap-2 border border-border bg-card py-2 pl-8 pr-3 transition-all duration-200 hover:border-text-secondary hover:shadow-sm data-[visible=false]:pointer-events-none data-[visible=true]:pointer-events-auto data-[visible=false]:translate-y-2 data-[visible=true]:translate-y-0 data-[visible=false]:opacity-0 data-[visible=true]:opacity-100 dark:border-border-dark dark:bg-card-dark dark:hover:border-text-secondary-dark"
>
  <IconChevronLeft
    class="absolute left-2 top-1/2 h-4 w-4 -translate-y-1/2 rotate-90"
  />
  <span
    class="group-hover:text-primary dark:group-hover:text-primary whitespace-nowrap text-sm text-text-secondary transition-colors dark:text-text-secondary-dark"
  >
    Back to top
  </span>
</button>

<script>
  function setupBackToTop() {
    const backToTopBtn = document.getElementById("back-to-top");
    if (!backToTopBtn) return;

    let isVisible = false;
    let rafId = null;

    const updateVisibility = (show) => {
      if (isVisible === show) return;
      isVisible = show;

      backToTopBtn.setAttribute("data-visible", show.toString());
    };

    const handleScroll = () => {
      if (rafId) return;

      rafId = requestAnimationFrame(() => {
        const show = window.scrollY > 200;
        updateVisibility(show);
        rafId = null;
      });
    };

    const scrollToTop = (e) => {
      e.preventDefault();
      window.scrollTo({ top: 0, behavior: "smooth" });
    };

    window.addEventListener("scroll", handleScroll, { passive: true });
    backToTopBtn.addEventListener("click", scrollToTop);

    requestAnimationFrame(() => {
      updateVisibility(window.scrollY > 200);
    });
  }

  document.addEventListener("astro:page-load", setupBackToTop);
</script>
