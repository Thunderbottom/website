<button
  id="back-to-top"
  class="group pointer-events-none fixed bottom-12 left-1/2 z-40 inline-flex -translate-x-1/2 translate-y-2 transform items-center gap-2 rounded-lg border border-border bg-card py-2 pl-8 pr-3 opacity-0 transition-all duration-300 hover:border-text-secondary hover:bg-gray-50 dark:border-border-dark dark:bg-card-dark dark:hover:border-text-secondary-dark dark:hover:bg-gray-800"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    class="absolute left-2 top-1/2 h-4 w-4 -translate-y-1/2 rotate-90 text-text-muted transition-all duration-300 group-hover:text-link dark:text-text-muted-dark dark:group-hover:text-link-dark"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
  >
    <line
      x1="5"
      y1="12"
      x2="19"
      y2="12"
      class="translate-x-0.5 scale-x-0 transition-transform duration-300 group-hover:translate-x-0 group-hover:scale-x-100"
    ></line>
    <polyline
      points="12 5 5 12 12 19"
      class="translate-x-0.5 transition-transform duration-300 group-hover:translate-x-0"
    ></polyline>
  </svg>
  <span
    class="whitespace-nowrap text-sm text-text-secondary transition-colors group-hover:text-text-primary dark:text-text-secondary-dark dark:group-hover:text-text-primary-dark"
  >
    Back to top
  </span>
</button>

<script>
  function setupBackToTop() {
    const backToTopBtn = document.getElementById("back-to-top");
    if (!backToTopBtn) return;

    const handleScroll = () => {
      const show = window.scrollY > 200;
      backToTopBtn.classList.toggle("opacity-0", !show);
      backToTopBtn.classList.toggle("pointer-events-none", !show);
      backToTopBtn.classList.toggle("translate-y-2", !show);
      backToTopBtn.classList.toggle("opacity-100", show);
      backToTopBtn.classList.toggle("pointer-events-auto", show);
      backToTopBtn.classList.toggle("translate-y-0", show);
    };

    const scrollToTop = (e) => {
      e.preventDefault();
      window.scrollTo({ top: 0, behavior: "smooth" });
    };

    window.addEventListener("scroll", handleScroll, { passive: true });
    backToTopBtn.addEventListener("click", scrollToTop);
    handleScroll(); // Initial check
  }

  document.addEventListener("DOMContentLoaded", setupBackToTop);
  document.addEventListener("astro:after-swap", setupBackToTop);
</script>
