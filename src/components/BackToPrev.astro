---
import IconChevronLeft from "@assets/icons/IconChevronLeft.astro";
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a
  href={href}
  class="group relative inline-flex items-center gap-2 rounded-lg border border-border bg-card py-2 pl-8 pr-3 transition-all duration-300 hover:border-text-secondary hover:bg-gray-50 dark:border-border-dark dark:bg-card-dark dark:hover:border-text-secondary-dark dark:hover:bg-gray-800"
>
  <IconChevronLeft class="absolute left-2 top-1/2 h-4 w-4 -translate-y-1/2" />
  <span
    class="text-sm text-text-secondary transition-colors group-hover:text-text-primary dark:text-text-secondary-dark dark:group-hover:text-text-primary-dark"
  >
    <slot />
  </span>
</a>
