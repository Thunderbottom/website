---
interface Props {
  title: string;
  description?: string;
  size?: "sm" | "md" | "lg";
  class?: string;
}

const { title, description, size = "md", class: className = "" } = Astro.props;

const titleClasses = {
  sm: "font-display text-lg font-semibold text-text-primary dark:text-text-primary-dark",
  md: "font-display text-xl font-semibold text-text-primary dark:text-text-primary-dark",
  lg: "font-display text-2xl font-semibold text-text-primary dark:text-text-primary-dark",
};

const titleElement = size === "sm" ? "h2" : "h1";
---

<div class={`animate ${className}`}>
  {
    titleElement === "h1" ? (
      <h1 class={titleClasses[size]}>{title}</h1>
    ) : (
      <h2 class={titleClasses[size]}>{title}</h2>
    )
  }
  {
    description && (
      <p class="mt-4 text-text-secondary dark:text-text-secondary-dark">
        {description}
      </p>
    )
  }
</div>
