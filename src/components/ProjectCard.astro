---
import { formatDate } from "@lib/config";
import Link from "@components/Link.astro";
import Tag from "@components/Tag.astro";
import BaseCard from "@components/BaseCard.astro";
import type { ProjectItem } from "@lib/config";

interface Props {
  project: ProjectItem;
}

const { project } = Astro.props;
---

<BaseCard class="flex flex-col gap-4 p-4">
  <div class="min-w-0 flex-1">
    <div
      class="mb-1 font-display text-lg font-semibold text-text-primary dark:text-text-primary-dark"
    >
      {project.title}
    </div>
    <div class="mb-2 text-sm text-text-secondary dark:text-text-secondary-dark">
      {formatDate(new Date(project.date), "%B %d, %Y")}
    </div>
    <div
      class="mb-3 text-sm leading-relaxed text-text-secondary dark:text-text-secondary-dark"
    >
      {project.description}
    </div>

    {
      project.tags && project.tags.length > 0 && (
        <div class="mb-3 flex flex-wrap gap-2">
          {project.tags.map((tag) => (
            <Tag text={tag} />
          ))}
        </div>
      )
    }

    {
      (project.demoURL || project.repoURL || project.websiteURL) && (
        <nav class="flex gap-1 text-sm">
          {project.demoURL && (
            <Link href={project.demoURL} external underline>
              demo
            </Link>
          )}
          {project.demoURL && project.repoURL && (
            <span class="text-text-secondary dark:text-text-secondary-dark">
              /
            </span>
          )}
          {project.repoURL && (
            <Link href={project.repoURL} external underline>
              source code
            </Link>
          )}
          {project.repoURL && project.websiteURL && (
            <span class="text-text-secondary dark:text-text-secondary-dark">
              /
            </span>
          )}
          {project.websiteURL && (
            <Link href={project.websiteURL} external underline>
              website
            </Link>
          )}
        </nav>
      )
    }
  </div>
</BaseCard>
