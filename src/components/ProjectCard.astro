---
import { formatDate } from "@lib/utils";
import Link from "@components/Link.astro";
import type { ProjectItem } from "@lib/constants";

interface Props {
  project: ProjectItem;
}

const { project } = Astro.props;
---

<div
  class="group relative flex flex-col gap-4 rounded-lg border border-border bg-card p-4 transition-all duration-300 hover:-translate-y-0.5 hover:border-text-secondary hover:bg-gray-50 hover:shadow-md dark:border-border-dark dark:bg-card-dark dark:hover:border-text-secondary-dark dark:hover:bg-gray-800"
>
  <div class="min-w-0 flex-1">
    <div
      class="mb-1 font-display text-lg font-semibold text-text-primary transition-colors group-hover:text-link dark:text-text-primary-dark dark:group-hover:text-link-dark"
    >
      {project.title}
    </div>
    <div class="mb-2 text-sm text-text-secondary dark:text-text-secondary-dark">
      {formatDate(new Date(project.date), "%B %d, %Y")}
    </div>
    <div
      class="mb-3 text-sm leading-relaxed text-text-secondary dark:text-text-secondary-dark"
    >
      {project.description}
    </div>

    {
      project.tags && project.tags.length > 0 && (
        <div class="mb-3 flex flex-wrap gap-1">
          {project.tags.map((tag) => (
            <span class="rounded-md bg-gray-200 px-2 py-1 font-mono text-xs text-text-secondary dark:bg-gray-700 dark:text-text-secondary-dark">
              {tag}
            </span>
          ))}
        </div>
      )
    }

    {
      (project.demoURL || project.repoURL) && (
        <nav class="flex gap-1 text-sm">
          {project.demoURL && (
            <Link href={project.demoURL} external underline>
              demo
            </Link>
          )}
          {project.demoURL && project.repoURL && (
            <span class="text-text-secondary dark:text-text-secondary-dark">
              /
            </span>
          )}
          {project.repoURL && (
            <Link href={project.repoURL} external underline>
              source code
            </Link>
          )}
        </nav>
      )
    }
  </div>
</div>
