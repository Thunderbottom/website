---
import type { CollectionEntry } from "astro:content";
import { formatDate } from "@lib/config";
import IconChevronLeft from "@assets/icons/IconChevronLeft.astro";
import BaseCard from "@components/BaseCard.astro";

interface Props {
  entry: CollectionEntry<"blog">;
}

const { entry } = Astro.props;
---

<BaseCard href={`/blog/${entry.slug}/`} class="flex items-start gap-4 p-4">
  <div class="min-w-0 flex-1">
    <div
      class="mb-1 font-display text-lg font-semibold text-text-primary dark:text-text-primary-dark"
    >
      {entry.data.title}
    </div>
    <div class="mb-2 text-sm text-text-secondary dark:text-text-secondary-dark">
      {formatDate(new Date(entry.data.date), "%B %d, %Y")}
    </div>
    {
      entry.data.description && (
        <div class="text-sm leading-relaxed text-text-secondary dark:text-text-secondary-dark">
          {entry.data.description}
        </div>
      )
    }
  </div>

  <IconChevronLeft class="mt-1 h-5 w-5 flex-shrink-0 rotate-180" />
</BaseCard>
