---
import Container from "@components/Container.astro";
import IconSun from "@assets/icons/IconSun.svg";
import IconMoon from "@assets/icons/IconMoon.svg";
import { NAVIGATION, SITE } from "@lib/config";
---

<header>
  <Container>
    <div class="flex flex-wrap items-center justify-between gap-y-2">
      <a
        href="/"
        class="text-primary dark:text-primary font-display text-lg transition-colors duration-200 hover:text-text-secondary dark:hover:text-text-secondary-dark"
        style="font-weight: 700;"
      >
        {SITE.DOMAIN}
      </a>

      <div class="flex items-center gap-3 text-sm md:text-base">
        <nav class="flex items-center gap-1">
          {
            NAVIGATION.map((item, index) => (
              <>
                <a
                  href={item.url}
                  class="text-primary dark:text-primary whitespace-nowrap font-display font-semibold transition-all duration-200"
                >
                  {item.name.toLowerCase()}
                </a>
                {index < NAVIGATION.length - 1 && (
                  <span class="mx-1 text-text-muted dark:text-text-muted-dark" />
                )}
              </>
            ))
          }
        </nav>

        <button
          id="theme-toggle"
          aria-label="Switch to dark theme"
          class="relative flex h-8 w-8 items-center justify-center rounded-sm p-1 transition-all duration-200"
        >
          <IconSun
            class="absolute size-4 rotate-0 scale-100 transition-all duration-300 dark:-rotate-90 dark:scale-0"
          />
          <IconMoon
            class="absolute size-4 rotate-90 scale-0 transition-all duration-300 dark:rotate-0 dark:scale-100"
          />
        </button>
      </div>
    </div>
  </Container>
</header>
