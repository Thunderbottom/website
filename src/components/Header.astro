---
import Container from "@components/Container.astro";
import IconSun from "@assets/icons/IconSun.svg";
import IconMoon from "@assets/icons/IconMoon.svg";
import { NAVIGATION, SITE } from "@lib/constants";
---

<header>
  <Container>
    <div class="flex flex-wrap items-center justify-between gap-y-2">
      <a
        href="/"
        class="font-display text-lg font-semibold text-text-primary transition-colors hover:text-link dark:text-text-primary-dark dark:hover:text-link-dark"
      >
        {SITE.DOMAIN}
      </a>

      <div class="flex items-center gap-4">
        <nav class="flex items-center gap-1 text-base">
          {
            NAVIGATION.map((item, index) => (
              <>
                <a
                  href={item.url}
                  class="font-display font-medium text-text-primary transition-colors hover:text-link dark:text-text-primary-dark dark:hover:text-link-dark"
                >
                  {item.name.toLowerCase()}
                </a>
                {index < NAVIGATION.length - 1 && (
                  <span class="mx-1 text-text-muted dark:text-text-muted-dark" />
                )}
              </>
            ))
          }
        </nav>

        <button
          id="theme-toggle"
          aria-label="Toggle theme"
          class="relative flex h-6 w-6 items-center justify-center rounded-md p-1 transition-colors duration-200 hover:bg-blue-300 dark:hover:bg-blue-800"
        >
          <IconSun
            class="absolute size-4 rotate-0 scale-100 transition-all duration-300 dark:-rotate-90 dark:scale-0"
          />
          <IconMoon
            class="absolute size-4 rotate-90 scale-0 transition-all duration-300 dark:rotate-0 dark:scale-100"
          />
        </button>
      </div>
    </div>
  </Container>
</header>
