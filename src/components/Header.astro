---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { NAVIGATION, SITE } from "@lib/constants";
---

<header>
  <Container>
    <div class="flex flex-wrap gap-y-2 justify-between items-center">
      <a
        href="/"
        class="font-display text-lg font-semibold text-text-primary dark:text-text-primary-dark hover:text-link dark:hover:text-link-dark transition-colors"
      >
        {SITE.DOMAIN}
      </a>

      <div class="flex items-center gap-4">
        <nav class="flex gap-1 items-center text-base">
          {
            NAVIGATION.map((item, index) => (
              <>
                <a
                  href={item.url}
                  class="font-display text-text-primary dark:text-text-primary-dark hover:text-link dark:hover:text-link-dark transition-colors font-medium"
                >
                  {item.name.toLowerCase()}
                </a>
                {index < NAVIGATION.length - 1 && (
                  <span class="text-text-muted dark:text-text-muted-dark mx-1" />
                )}
              </>
            ))
          }
        </nav>

        <button
          id="theme-toggle"
          aria-label="light"
          class="size-6 flex items-center justify-center rounded-md hover:bg-blue-300 dark:hover:bg-blue-800 transition-colors duration-200"
        >
          <svg
            class="sun-and-moon"
            aria-hidden="true"
            width="16"
            height="16"
            viewBox="0 0 24 24"
          >
            <mask class="moon" id="moon-mask">
              <rect x="0" y="0" width="100%" height="100%" fill="white"></rect>
              <circle cx="24" cy="10" r="6" fill="black"></circle>
            </mask>
            <circle
              class="sun"
              cx="12"
              cy="12"
              r="6"
              mask="url(#moon-mask)"
              fill="currentColor"></circle>
            <g
              class="sun-beams"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
            >
              <line x1="12" y1="1" x2="12" y2="3"></line>
              <line x1="12" y1="21" x2="12" y2="23"></line>
              <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
              <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
              <line x1="1" y1="12" x2="3" y2="12"></line>
              <line x1="21" y1="12" x2="23" y2="12"></line>
              <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
              <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
            </g>
          </svg>
        </button>
      </div>
    </div>
  </Container>
</header>
