---
import Container from "@components/Container.astro";

interface Props {
  spacing?: "sm" | "md" | "lg" | "xl";
  class?: string;
}

const { spacing = "md", class: className = "" } = Astro.props;

const spacingClasses = {
  sm: "space-y-8",
  md: "space-y-12",
  lg: "space-y-16",
  xl: "space-y-20",
};
---

<Container>
  <div class={`${spacingClasses[spacing]} ${className}`}>
    <slot />
  </div>
</Container>
