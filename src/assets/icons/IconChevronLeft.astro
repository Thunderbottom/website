---
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  class={`text-text-muted transition-all duration-300 group-hover:text-link dark:text-text-muted-dark dark:group-hover:text-link-dark ${className}`}
  fill="none"
  stroke="currentColor"
  stroke-width="2"
>
  <line
    x1="5"
    y1="12"
    x2="19"
    y2="12"
    class="translate-x-1 scale-x-0 transition-transform duration-300 group-hover:translate-x-0 group-hover:scale-x-100"
  ></line>
  <polyline
    points="12 5 5 12 12 19"
    class="translate-x-0.5 transition-transform duration-300 group-hover:translate-x-0"
  ></polyline>
</svg>
